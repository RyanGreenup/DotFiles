(global-set-key (kbd "M-x") 'helm-M-x)
(evil-define-key 'normal 'global (kbd "<leader>ff") 'helm-find-files) ; Use helm
(evil-define-key 'normal 'global (kbd "<leader>fr") 'helm-recentf) ;; use helm

;; (helm-mode 1)

(provide 'init-helm)
